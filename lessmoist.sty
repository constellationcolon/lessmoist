% Shortcuts to math commands to make notetaking easier
\newcommand{\norm}[1]{\left\|#1\right\|} % auto-sized norm
\newcommand{\unnorm}[1]{\|#1\|} % normal sized norm
\newcommand{\abs}[1]{\left|#1\right|} % auto-sized absolute signs
\newcommand{\aunbs}[1]{=|#1|} % normal sized absolute signs
\newcommand{\p}[1]{\left(#1\right)} % auto-sized parentheses
\renewcommand{\b}[1]{\left[ #1 \right]} % auto-sized brackets
\newcommand{\B}[1]{\left\{#1\right\}} % auto-sized braces
\newcommand{\inner}[1]{\left\langle#1\right\rangle} % auto-sized angled brackets
\newcommand{\floor}[1]{\left\lfloor#1\right\rfloor} % auto-sized floor signs
\newcommand{\sfrac}[2]{{}^{#1}\!/_{\!#2}} % slashed fractions

% shortcuts for matrices
\newcommand{\bmat}[1]{\begin{bmatrix}#1\end{bmatrix}} 
\newcommand{\Bmat}[1]{\begin{Bmatrix}#1\end{Bmatrix}}
\newcommand{\pmat}[1]{\begin{pmatrix}#1\end{pmatrix}}
\newcommand{\vmat}[1]{\begin{vmatrix}#1\end{vmatrix}}
\newcommand{\Vmat}[1]{\begin{Vmatrix}#1\end{Vmatrix}}
\newcommand{\mat}[1]{\begin{matrix}#1\end{matrix}}
\newcommand{\smat}[1]{\begin{smallmatrix}#1\end{smallmatrix}}
\newcommand{\cs}[1]{\begin{cases}#1\end{cases}}

% shortcuts for commonly used sets of numbers
\newcommand{\naturals}{\mathbb{N}} 
\newcommand{\integers}{\mathbb{Z}}
\newcommand{\rationals}{\mathbb{Q}}
\newcommand{\reals}{\mathbb{R}}
\newcommand{\complex}{\mathbb{C}}
\newcommand{\qed}{\hfill\blacksquare}

% shortcut for putting a nice looking newline in align environments
\newcommand{\alignbreak}{\\ \nonumber &\qquad}
\newcommand{\unalignbreak}{\\ &\qquad}
% a better spaced bar
\newcommand{\given}{\,\middle|\,}
\newcommand{\ungiven}{\,|\,}
% number only one line in a *-ed environment
\newcommand{\numberthis}{\addtocounter{equation}{1}\tag{\theequation}}

\newcommand{\psub}[1]{{}_{#1}\!} % allow for a subscript before a variable
\renewcommand{\d}[1]{\,\text{d} #1} % nicer looking differential operator
\newcommand{\Rint}{\mathcal{R}} % Riemann integrable
\renewcommand{\v}[1]{\mathbf{#1}} % vector
\renewcommand{\t}[1]{\textsf{#1}} % tensor
\renewcommand{\P}{\mathbb{P}} % probability
\newcommand{\E}{\mathbb{E}} % expectation
\renewcommand{\L}{\mathcal{L}} % laplace / lagrangian
\newcommand{\J}{\v J} % jacobian
\renewcommand{\I}{\mathbb{I}} % identity
\newcommand{\1}{\mathbb{1}} % indicator function
\newcommand{\union}{\cup} % actually have a union command
\newcommand{\Union}{\bigcup} % actually have a union command
\newcommand{\intersection}{\cap} % actually have an intersection command
\newcommand{\Intersection}{\bigcap} % actually have an intersection command
\renewcommand{\-}[1]{\overline{#1}} % easier overlines
\let\existstemp\exists
\let\foralltemp\forall
\renewcommand{\exists}{{\existstemp~}} % better spaced exists
\renewcommand{\forall}{{\foralltemp~}} % better spaced forall

\newcommand{\bigO}{\mathcal{O}} % big o
\newcommand{\normal}{\mathcal{N}} % normal distribution
\newcommand{\uniform}{\mathcal{U}} % uniform distribution

